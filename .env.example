# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Cassandra Source Configuration
CDC_CASSANDRA_HOSTS=localhost
CDC_CASSANDRA_PORT=9042
CDC_CASSANDRA_KEYSPACE=production
CDC_CASSANDRA_USERNAME=cassandra
CDC_CASSANDRA_PASSWORD=cassandra
CDC_CASSANDRA_CDC_RAW_DIR=/var/lib/cassandra/cdc_raw

# Postgres Destination Configuration
CDC_POSTGRES_HOST=localhost
CDC_POSTGRES_PORT=5432
CDC_POSTGRES_DATABASE=warehouse
CDC_POSTGRES_USERNAME=postgres
CDC_POSTGRES_PASSWORD=postgres
CDC_POSTGRES_SSL_MODE=require

# ClickHouse Destination Configuration
CDC_CLICKHOUSE_HOST=localhost
CDC_CLICKHOUSE_PORT=9000
CDC_CLICKHOUSE_DATABASE=warehouse
CDC_CLICKHOUSE_USERNAME=default
CDC_CLICKHOUSE_PASSWORD=
CDC_CLICKHOUSE_USE_TLS=true

# TimescaleDB Destination Configuration
CDC_TIMESCALEDB_HOST=localhost
CDC_TIMESCALEDB_PORT=5433
CDC_TIMESCALEDB_DATABASE=warehouse
CDC_TIMESCALEDB_USERNAME=postgres
CDC_TIMESCALEDB_PASSWORD=postgres
CDC_TIMESCALEDB_SSL_MODE=require

# Pipeline Configuration
CDC_CONFIG_FILE=config/pipeline.yaml
CDC_MASKING_RULES_FILE=config/masking-rules.yaml
CDC_SCHEMA_MAPPINGS_FILE=config/schema-mappings.yaml

# Observability Configuration
CDC_LOG_LEVEL=INFO
CDC_LOG_FORMAT=json
CDC_METRICS_PORT=9090
CDC_HEALTH_CHECK_PORT=8080

# Optional: Secrets Manager (HashiCorp Vault)
# CDC_VAULT_ADDR=http://localhost:8200
# CDC_VAULT_TOKEN=your-vault-token

# Optional: OpenTelemetry Tracing
# CDC_ENABLE_TRACING=false
# CDC_TRACING_ENDPOINT=http://localhost:4318
